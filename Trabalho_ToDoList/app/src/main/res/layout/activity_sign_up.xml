<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/cardview_dark_background"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tituloSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/sign_up_title"
        android:textColor="@color/white"
        android:textSize="40dp" />

    <RelativeLayout
        android:id="@+id/name"
        android:layout_below="@id/tituloSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/titleNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/sign_up_name"
            android:textSize="25dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/nameInput"
            android:layout_below="@id/titleNome"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="50dp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name">

        <TextView
            android:id="@+id/titleEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="@string/sign_up_email"
            android:textSize="25dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailInput"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/titleEmail"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:gravity="center" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pass"
        android:layout_below="@id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/titlePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="@string/sign_up_pass"
            android:textSize="25dp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passInput"
            android:layout_below="@id/titlePass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_width="300dp"
            android:layout_height="50dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/cadastrar"
        android:layout_below="@id/pass"
        android:layout_marginHorizontal="30dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:text="Cadastrar"
        android:textSize="20dp"
        android:layout_height="wrap_content" />



</RelativeLayout>